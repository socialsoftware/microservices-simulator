Aggregate Topic {
    Entity TopicCourse uses dto CourseDto {
        Integer courseAggregateId -> aggregateId;
        Integer courseVersion -> version;
    }

    Root Entity Topic {
        String name;
        TopicCourse course;
    }

    WebAPIEndpoints {
        @GenerateCrud;
    }

    Service TopicService {
        @GenerateCrud;
    }
}
