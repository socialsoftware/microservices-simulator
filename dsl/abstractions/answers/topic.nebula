Aggregate Topic {
    Entity TopicCourse uses dto CourseDto mapping {
        aggregateId -> courseAggregateId;
        version -> courseVersion;
    } {
        Integer courseAggregateId;
        Integer courseVersion;
    }

    Root Entity Topic {
        String name;
        TopicCourse course;
    }

    WebAPIEndpoints {
        @GenerateCrud;
    }

    Service TopicService {
        @GenerateCrud;
    }
}
